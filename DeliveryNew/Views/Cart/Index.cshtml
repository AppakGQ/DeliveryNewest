@model DeliveryNew.Models.Cart

@{
    ViewData["Title"] = "Корзина";
}

<div class="glass-container p-5 text-white">
    <h2 class="mb-4">Ваша Корзина</h2>

    @if (Model.Items.Count == 0)
    {
        <div class="alert alert-info glass-card border-0 text-white">
            Ваша корзина пуста. <a asp-controller="Orders" asp-action="Index" class="text-warning fw-bold">Перейти к меню</a>
        </div>
    }
    else
    {
        <table class="table table-borderless text-white">
            <thead class="border-bottom border-light">
                <tr>
                    <th>Товар</th>
                    <th>Количество</th>
                    <th class="text-end">Цена</th>
                    <th class="text-end">Итого</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var line in Model.Items)
                {
                    <tr>
                        <td class="align-middle">@line.DeliveryItem.Name</td>
                        <td class="align-middle">@line.Quantity</td>
                        <td class="text-end align-middle">@line.DeliveryItem.Price.ToString("c")</td>
                        <td class="text-end align-middle">
                            @((line.Quantity * line.DeliveryItem.Price).ToString("c"))
                        </td>
                        <td class="text-end">
                            <a asp-action="RemoveFromCart" asp-route-id="@line.DeliveryItem.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Удалить
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot class="border-top border-light fs-5 fw-bold">
                <tr>
                    <td colspan="3" class="text-end">Всего:</td>
                    <td class="text-end">@Model.TotalValue.ToString("c")</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>

        <div class="text-center mt-4">
            <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-light me-2">Продолжить покупки</a>
            <a asp-action="Checkout" class="btn btn-primary btn-lg rounded-pill px-5 shadow-lg">Оформить заказ</a>
        </div>
    }
</div>
