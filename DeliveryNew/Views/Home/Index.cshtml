@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section text-center text-white py-5">
    <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInDown">@Localizer["HeroTitle"]</h1>
    <p class="lead mb-5 animate__animated animate__fadeInUp">@Localizer["HeroSubtitle"]</p>
    <a asp-controller="Orders" asp-action="Index" class="btn btn-light btn-lg rounded-pill px-5 py-3 fw-bold shadow-lg animate__animated animate__pulse animate__infinite">@Localizer["OrderNow"]</a>
</div>

<div class="container mt-5">
    <div class="row text-center text-white">
        <div class="col-md-4 mb-4">
            <div class="glass-card p-4 h-100">
                <div class="display-4 mb-3">🚀</div>
                <h3>@Localizer["Feature1Title"]</h3>
                <p>@Localizer["Feature1Desc"]</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="glass-card p-4 h-100">
                <div class="display-4 mb-3">🥗</div>
                <h3>@Localizer["Feature2Title"]</h3>
                <p>@Localizer["Feature2Desc"]</p>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="glass-card p-4 h-100">
                <div class="display-4 mb-3">🎧</div>
                <h3>@Localizer["Feature3Title"]</h3>
                <p>@Localizer["Feature3Desc"]</p>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        background: rgba(0,0,0,0.2); 
        border-radius: 20px;
        backdrop-filter: blur(5px);
        margin-top: 2rem;
        padding: 4rem 2rem;
    }
</style>
