@model DeliveryNew.Models.DeliveryItem
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Delete"];
}

<div class="glass-container p-5 col-md-6 mx-auto text-white text-center">
    <h2 class="mb-4 text-danger">@Localizer["DeleteTitle"]</h2>
    <h4 class="mb-4">@Localizer["DeleteConfirmation"]</h4>
    
    <div class="glass-card p-4 mb-4 text-start">
        <dl class="row">
            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
        </dl>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-outline-light me-2">@Localizer["BackToList"]</a>
        <input type="submit" value="@Localizer["Delete"]" class="btn btn-danger" />
    </form>
</div>
