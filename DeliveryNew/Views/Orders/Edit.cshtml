@model DeliveryNew.Models.DeliveryItem
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Edit"];
}

<div class="glass-container p-5 col-md-8 mx-auto">
    <h2 class="text-white mb-4">@Localizer["Edit"] @Model.Name</h2>
    
    <form asp-action="Edit" class="text-white">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control glass-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        
        <div class="mb-3">
            <label asp-for="Description" class="control-label"></label>
            <textarea asp-for="Description" class="form-control glass-input" rows="3"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div class="row">
            <div class="col-md-6 mb-3">
                <label asp-for="Price" class="control-label"></label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent text-white border-end-0">$</span>
                    <input asp-for="Price" class="form-control glass-input border-start-0" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            
            <div class="col-md-6 mb-3">
                <label asp-for="CreatedAt" class="control-label"></label>
                <input asp-for="CreatedAt" class="form-control glass-input" />
                <span asp-validation-for="CreatedAt" class="text-danger"></span>
            </div>
        </div>
        
        <div class="mb-3">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control glass-input" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="mb-4 form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
            </label>
        </div>
        
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a asp-action="Index" class="btn btn-outline-light me-md-2">@Localizer["BackToList"]</a>
            <input type="submit" value="@Localizer["Save"]" class="btn btn-primary px-4" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
