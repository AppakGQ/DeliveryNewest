@model IEnumerable<DeliveryNew.Models.DeliveryItem>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Title"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1 class="text-white display-5 fw-bold">–ú–µ–Ω—é –î–æ—Å—Ç–∞–≤–∫–∏</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-light rounded-pill px-4 fw-bold">
                <i class="bi bi-plus-lg"></i> –î–æ–±–∞–≤–∏—Ç—å –¢–æ–≤–∞—Ä
            </a>
        }
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show glass-card border-0 text-white" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card h-100 glass-card text-white border-0 overflow-hidden">
                    <div class="card-img-top-wrapper" style="height: 200px; overflow: hidden; background: rgba(0,0,0,0.1);">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" class="w-100 h-100 object-fit-cover" alt="@item.Name" onerror="this.src='https://images.unsplash.com/photo-1546069901-ba9599a7e63c?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8Zm9vZHxlbnwwfHwwfHx8MA%3D%3D'"/>
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center h-100 bg-secondary bg-opacity-25">
                                <span class="fs-1">üçî</span>
                            </div>
                        }
                    </div>
                    
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title fw-bold mb-0">@item.Name</h5>
                            <span class="badge bg-warning text-dark rounded-pill">@item.Price.ToString("C")</span>
                        </div>
                        
                        <p class="card-text text-white-50 flex-grow-1 small">@item.Description</p>
                        
                         <div class="mt-3">
                            <div class="d-grid gap-2">
                                <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary rounded-pill btn-sm">–í –∫–æ—Ä–∑–∏–Ω—É</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-light">–ò–∑–º.</a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">–£–¥–∞–ª.</a>
                                    </div>
                                }
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-light btn-sm">–î–µ—Ç–∞–ª–∏</a>
                            </div>
                            <div class="text-end mt-2">
                                <small class="text-white-50" style="font-size: 0.7rem;">
                                     <span class="badge @(item.IsAvailable ? "bg-success" : "bg-secondary") me-1">
                                        @(item.IsAvailable ? "–î–æ—Å—Ç—É–ø–µ–Ω" : "–ù–µ—Ç –≤ –Ω–∞–ª–∏—á–∏–∏")
                                    </span>
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }
    .glass-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0,0,0,0.2);
    }
</style>
